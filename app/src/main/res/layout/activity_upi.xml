<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registrationPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Heading -->
    <TextView
        android:id="@+id/enterPhoneNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Phone\nNumber"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <!-- Subtext -->

    <!-- Phone number input container -->

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterPhoneNumberTitle"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="24dp"
        android:text="Please enter your phone number to receive a verification code."
        android:textColor="#B6B6B6"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_below="@id/subText"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/edittext_bg"
        android:padding="10dp">

        <TextView
            android:id="@+id/countryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />

        <EditText
            android:id="@+id/phoneNumberField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLength="10"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <!-- Fetch user button -->
    <Button
        android:id="@+id/fetchUserButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/inputContainer"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Fetch User id"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#333333"
        android:backgroundTint="#FFEA00" />

</RelativeLayout>
