<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/create_your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_marginTop="120dp" />

    <EditText
        android:id="@+id/editTextFullName"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="Name"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@drawable/input_box_border"
        android:layout_marginTop="60dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:hint="Phone Number"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:background="@drawable/input_box_border"
        android:layout_marginTop="27dp"
        android:padding="16dp"
        android:inputType="phone" />

    <RelativeLayout
        android:id="@+id/pin_input_container"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/input_box_border"
        android:padding="10dp">

        <EditText
            android:id="@+id/editTextPin"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:hint="Pin"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:paddingEnd="40dp"
            android:inputType="textPassword"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/pin_eye"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/group0"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Register"
        android:textColor="#333333"
        android:textSize="20sp"
        android:backgroundTint="#FFEA00"
        android:layout_marginTop="40dp"
        android:elevation="2dp" />
</LinearLayout>